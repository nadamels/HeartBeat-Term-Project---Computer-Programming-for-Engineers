function main()
    age = input('Please enter the age of the user\n');
    gender = input('Please enter the gender of the user. Press M for male and F for female\nPlease enter the letter in ''''\n');
    athletics = input('Please press Y if the user is an athlete, otherwise press N\nPlease enter the letter in ''''\n');
    HRfile = fopen('SampleResults.txt');
    if HRfile == -1
       error('File open not successful')
    end
    [result] = fscanf(HRfile,'%f', 1);
    fclose(HRfile);
    disp(result);

    if athletics == 'N'

        if gender == 'M'

            if age >= 20 && age <= 39
                if result < 55
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 75
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

            if age > 39 && age <= 59
                if result < 55
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 76
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

            if age > 59 && age <= 79
                if result < 54
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 74
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

        end

        if gender == 'F'

            if age >= 20 && age <= 39
                if result < 60
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 81
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

            if age > 39 && age <= 59
                if result < 59
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 78
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

            if age > 59 && age <= 79
                if result < 59
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 77
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

        end

    end   

    if athletics == 'Y'

        if gender == 'M'

            if age >= 20 && age <= 39
                if result < 47
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 75
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

            if age > 39 && age <= 59
                if result < 46
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 76
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

            if age > 59 && age <= 79
                if result < 45
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 74
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

        end

        if gender == 'F'

            if age >= 20 && age <= 39
                if result < 52
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 81
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

            if age > 39 && age <= 59
                if result < 51
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 78
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

            if age > 59 && age <= 79
                if result < 52
                    fprintf ('Low Heart Rate Variabilty Alert! :( \n')
                elseif result > 77
                    fprintf ('High Heart Rate Variability Alert! :( \n')
                else
                    fprintf ('Normal Heart Rate ;) \n')
                end
            end

        end

    end    


end
